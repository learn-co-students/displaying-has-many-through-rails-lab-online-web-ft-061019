<h1>Doctors#show</h1>
<p>Find me in app/views/doctors/show.html.erb</p>

<h2> <%= @doctor.name %> </h2>
<h3> <%= @doctor.department %> </h3>

<h4>Appointments:</h4>
   <% @doctor.appointments.each.with_index(1) do |appt, index| %>
      <ul>Appointment <%= index %>
         <li> <%= link_to  appt.patient.name, patient_path(appt.patient) %> </li><br>
         <%= appt.human_readable_datetime %>
      </ul><br>
   <% end %>
